{%if post.comment_status == "open" %}
    <div class="card my-4">
        <h5 class="card-header">Leave a Comment:</h5>
        <div class="card-body">
            <form id="form" class="comment-form" method="post" action="{{ site.url~'/wp-comments-post.php' }}">
                {% if user %}
                    <input type="hidden" name="email" value="{{ user.email }}">
                        <input type="hidden" name="author" value="{{ user.name }}">
                            <input type="hidden" name="url" value="{{ user.link }}">
                                {% else %}
                                <div>
                                    <div class="form-group">
                                        <label for="email">
                                            email
                                        </label>
                                        <input class="form-control" id="email" name="email" required type="text"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="author">
                                            username
                                        </label>
                                        <input class="form-control" id="author" name="author" required type="text"/>
                                    </div>
                                    <div class="form-group" style='disply:none'>
                                        <label for="url">
                                            url
                                        </label>
                                        <input class="form-control" id="url" name="url" type="text"/>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="form-group">
                                <label for="comment" class="sr-only">
                                    comment
                                </label>
                                <textarea class="form-control" cols="60" id="comment" name="comment" placeholder="comment text" rows="3"></textarea>
                                <small id="emailHelp" class="form-text text-muted">Your comment will be revised by the site if needed.</small>
                            </div>
                            <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
                                <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">
                                    <div>
                                        <button class="btn btn-primary" name="Submit" type="submit">
                                            send
                                        </button>
                                        <button type="reset" class="btn btn-warning">
                                            cancel
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    {% endif %}
                