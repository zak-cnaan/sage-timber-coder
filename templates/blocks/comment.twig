<div class="media mb-4 {{ comment.comment_type }}" id="blog-comment-{{comment.ID}}">
    <img alt="" class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50">
        <div class="media-body">
            <h5 class="mt-0">
                {{ comment.author.name }}
                says</h5>
            {{ comment.comment_content|wpautop }}
            {% for comment in comment.children %}
                {% include "blocks/comment.twig" with {comment:comment} %}
            </div>
        {% endfor %}
    </div>
